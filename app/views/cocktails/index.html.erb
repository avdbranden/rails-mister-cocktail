<h1 class="text-center">Welcome to Mister Cocktail</h1>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-success" %>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <%= link_to cocktail.name, cocktail_path(cocktail), class: "btn btn-success" %>
          <% if cocktail.picture %>
            <%= image_tag cocktail.picture %>
          <% end %>
          <% if cocktail.photo? %>
            <%= cl_image_tag cocktail.photo.path, width: 150, height: 100, crop: :fill %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
