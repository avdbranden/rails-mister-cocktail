<h1 class="text-center">Welcome to Mister Cocktail</h1>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <ul>
        <% @cocktails.each do |cocktail| %>
          <li><%= link_to cocktail.name, cocktail_path(cocktail), class: "btn btn-success" %></li>
        <% end %>
      </ul>
      <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>

